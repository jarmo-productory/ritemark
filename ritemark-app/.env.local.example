# Google OAuth Configuration for RiteMark
# Copy this to .env.local and fill in your Google OAuth Client ID

# OpenAI API Key - REMOVED for security
# Please add your API key through Settings â†’ General in the app UI
# VITE_OPENAI_API_KEY=

# Get your Client ID from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your-client-id-here.apps.googleusercontent.com

# OAuth redirect URI for the Netlify function callback
# IMPORTANT: Must match authorized redirect URIs in Google Cloud Console
# Local dev: http://localhost:8888/.netlify/functions/auth-callback
# Staging: https://ritemark.netlify.app/.netlify/functions/auth-callback
# Production: https://rm.productory.ai/.netlify/functions/auth-callback
VITE_OAUTH_REDIRECT_URI=http://localhost:8888/.netlify/functions/auth-callback

# Use mock OAuth for development without Google setup (true/false)
VITE_USE_MOCK_OAUTH=false

VITE_USE_SIDEBAR_SCAFFOLD=true
